<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.well.MainActivity">
    <ImageView
        android:src="@drawable/taipei101"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/taipei_text_view"
        android:text="Taipei 101 is"
        android:layout_alignParentRight="true"
        android:layout_marginTop="37dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/highest_text_view"
        android:text="the highest"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/taipei_text_view"
        android:textColor="#000000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/in_text_view"
        android:text="structure in"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="35dp"
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highest_text_view"
        android:textColor="#000000"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/taiwan_text_view"
        android:text="Taiwan!!"
        android:layout_alignParentRight="true"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/in_text_view"
        android:textColor="#000000"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/tran_text_view"
        android:text="Transportation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tra_text_view"
        android:text="facility"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tran_text_view"
        android:textColor="#F44336"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/deli_text_view"
        android:text="Delicious food"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/taiwan_text_view"
        android:textColor="#EF6C00"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/view_text_view"
        android:text="Beautiful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#4527A0"
        android:textSize="18sp"
        android:layout_below="@+id/deli_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/vie_text_view"
        android:text="view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#4527A0"
        android:textSize="18sp"
        android:layout_below="@+id/view_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/shop_text_view"
        android:text="Shopping"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/in_text_view"
        android:layout_centerHorizontal="true"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/beau_text_view"
        android:text="    ~ Wellcome ~"
        android:background="#004D40"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="40sp"/>

</RelativeLayout>
